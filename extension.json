{
    "identifier": "belcar.pyright",
    "name": "Python+",
    "description": "A Python extension powered by Microsoft's Pyright Language Server.",
    "main": "main.js",
    "version": "0.1.0",

    "entitlements": {
        "process": true,
        "filesystem": "readonly"
    },
    "activationEvents": [
        "onLanguage:python"
    ],
    "bugs": "https://github.com/belcar-s/nova-pyright",
    "categories": [
        "languages",
        "issues",
        "completions",
        "commands"
    ],

    "commands": {
        "editor": [
            {
                "title": "Order Imports",
                "command": "orderImports",
                "filters": {
                    "syntaxes": ["python"]
                }
            },
            {
                "title": "Add Missing Optional To Parameter",
                "command": "addMissingOptionalToParam",
                "filters": {
                    "syntaxes": ["python"]
                }
            }
        ]
    },

    "configWorkspace": [
        {
            "key": "pyright.validation_enabled",
            "title": "Enable Validation",
            "type": "Boolean",
            "default": true,
            "description": "Validate files in this project."
        }
    ],

    "config": [
        {
            "key": "pyright.user_path",
            "title": "Server Location",
            "type": "path",
            "placeholder": "Built-in",
            "description": "Select a JavaScript file; the extension will run it with Node.js.",
            "allowFolders": false,
            "required": false
        }
    ],

	"sidebars": [
		{
			"id": "pyright.status",
			"name": "Pyright LSP Server",
			"smallImage": "logo-small",
			"smallSelectedImage": "logo-small-selected",
			"largeImage": "logo-large",
			"sections": [
				{
					"id": "pyright.status-details",
					"name": "Details",
					"allowMultiple": false,
					"headerCommands": [
						{
							"title": "Restart",
							"image": "restart",
							"tooltip": "Restart the Pyright Language Server",
							"command": "pyright.status-restart"
						}
					]
				},
                {
                    "id": "pyright.update"
                }
			]
		}
	]
}